<Window x:Class="SchoolManager.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolManager"
        mc:Ignorable="d"
        Title="Input" Height="180" Width="245"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="inputBox" HorizontalAlignment="Left" Margin="95,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="41,48,0,0" VerticalAlignment="Top"/>
        <Button Content="确认" Width="40" HorizontalAlignment="Left" Margin="58,106,0,0" VerticalAlignment="Top" Click="OnConfirm"/>
        <Button Content="取消" Width="40" HorizontalAlignment="Left" Margin="146,106,0,0" VerticalAlignment="Top" Click="OnCancel"/>

    </Grid>
</Window>
